#!/usr/bin/env python3

from tippy import tippy
from pathlib import Path

# Can I use the config.json included in the package?
# this gets installed in the bin/ of the appropriate
# python version. How do I get reliable access to the
# config file from there?
DEFAULT_CONFIG = Path.home() / '.tippy_config.json'

config = tippy.get_config(DEFAULT_CONFIG)
tips = tippy.get_tips(config)
for tip in tips:
    tippy.show_tip(tip)
